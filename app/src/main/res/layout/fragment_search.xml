<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.search.SearchFragment">

    <ImageView
        android:id="@+id/ic_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:src="@drawable/baseline_location_on_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/et_from"
        app:layout_constraintEnd_toStartOf="@id/et_from"
        app:layout_constraintBottom_toBottomOf="@id/et_from"/>

    <AutoCompleteTextView
        android:id="@+id/et_from"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="60dp"
        android:hint="@string/from"
        android:textColorHint="@color/color_2"
        android:textColor="@color/shadow"
        android:inputType="text"
        android:textSize="18sp"
        android:completionThreshold="1"
        app:layout_constraintStart_toEndOf="@id/ic_from"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/ic_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_location_on_24"
        app:layout_constraintStart_toStartOf="@id/ic_from"
        app:layout_constraintTop_toTopOf="@id/et_to"
        app:layout_constraintBottom_toBottomOf="@id/et_to"
        />

    <AutoCompleteTextView
        android:id="@+id/et_to"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="@string/to"
        android:textColorHint="@color/color_2"
        android:textColor="@color/shadow"
        android:inputType="text"
        android:textSize="18sp"
        android:completionThreshold="1"
        app:layout_constraintStart_toStartOf="@id/et_from"
        app:layout_constraintTop_toBottomOf="@id/et_from"
        app:layout_constraintEnd_toEndOf="@id/et_from"/>

    <ImageView
        android:id="@+id/ic_reverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:src="@drawable/baseline_import_export_24"
        app:layout_constraintStart_toEndOf="@id/et_from"
        app:layout_constraintTop_toTopOf="@id/et_from"
        app:layout_constraintBottom_toBottomOf="@id/et_to"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/ic_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_calendar_month_24"
        app:layout_constraintStart_toStartOf="@id/ic_from"
        app:layout_constraintTop_toTopOf="@id/btn_date"
        app:layout_constraintEnd_toStartOf="@id/btn_date"
        app:layout_constraintBottom_toBottomOf="@id/btn_date"/>

    <TextView
        android:id="@+id/btn_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:padding="10dp"
        android:textColor="@color/shadow"
        android:textSize="18sp"
        android:text="@string/select_date"
        app:layout_constraintStart_toStartOf="@id/et_from"
        app:layout_constraintTop_toBottomOf="@id/et_to"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_button_search"
        android:textColor="@color/shadow"
        android:textSize="18sp"
        android:text="@string/search"
        app:layout_constraintStart_toStartOf="@id/ic_from"
        app:layout_constraintTop_toBottomOf="@id/btn_date"
        app:layout_constraintEnd_toEndOf="@id/btn_date"/>

    <TextView
        android:id="@+id/tv_last_requests"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/shadow"
        android:lineSpacingExtra="5sp"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/btn_search"
        app:layout_constraintTop_toBottomOf="@id/btn_search"
        app:layout_constraintEnd_toEndOf="@id/btn_search"/>

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textColor="@color/shadow"
        app:layout_constraintStart_toStartOf="@id/tv_last_requests"
        app:layout_constraintTop_toBottomOf="@id/tv_last_requests"
        app:layout_constraintEnd_toEndOf="@id/tv_last_requests"/>

</androidx.constraintlayout.widget.ConstraintLayout>