<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_border_for_rc">

    <TextView
        android:id="@+id/date_departure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:text="10 февраля"
        android:textColor="@color/shadow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_departure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:fontFamily="@font/pt_sans_bold"
        android:text="17:00"
        android:textColor="@color/color_1"
        app:layout_constraintStart_toStartOf="@id/date_departure"
        app:layout_constraintTop_toBottomOf="@id/date_departure"/>

    <TextView
        android:id="@+id/date_arrival"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:text="10 февраля"
        android:textColor="@color/shadow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvArrival"/>

    <TextView
        android:id="@+id/tvArrival"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:textColor="@color/color_1"
        android:textSize="28sp"
        android:fontFamily="@font/pt_sans_bold"
        android:text="21:00"
        app:layout_constraintTop_toTopOf="@id/tv_departure"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvRoute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"
        android:textColor="@color/shadow"
        android:textSize="18sp"
        android:text="Маршрут: Москва - Санкт-Петербург"
        app:layout_constraintStart_toStartOf="@id/tv_departure"
        app:layout_constraintTop_toBottomOf="@id/tv_departure"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
